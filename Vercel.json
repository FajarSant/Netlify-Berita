{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "src/api/**",
      "use": "@vercel/node"
    },
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/endpoint", "dest": "Servers/index.cjs" },
    { "src": "/(.*)", "dest": "public/$1" },
    { "src": "/Servers", "dest": "index.cjs" }  
  ]
}
